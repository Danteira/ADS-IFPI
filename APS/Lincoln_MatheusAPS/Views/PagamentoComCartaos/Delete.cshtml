@model Lincoln_MatheusAPS.Models.PagamentoComCartao

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<div class="row">
    <div class = "col-md-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class = "alert alert-success">@TempData["SuccessMessage"]</div>
        }
        else if (TempData["ErrorMessage"] != null)
        {
            <div class = "alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        <h3>Você tem certeza que deseja excluir ?</h3>
        <div>
            <h4>Pagamento Com Cartão</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.NumeroDoCartao)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NumeroDoCartao)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Bandeira)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Bandeira)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.NomeDoCobrador)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NomeDoCobrador)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.InformacoesAdicionais)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.InformacoesAdicionais)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Discriminator)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Discriminator)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="Idtp" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Volte a Lista</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        setTimeout(function() {
            $('.alert').fadeOut('fast');
        }, 5000);
    </script>
}