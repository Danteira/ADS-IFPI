@model Lincoln_MatheusAPS.Models.NotaDeVenda

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Nota De Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tipo" /> @Html.DisplayNameFor(model => model.Tipo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idv" class="control-label"></label>
                <select asp-for="Idv" class="form-control" asp-items="ViewBag.Idv"></select>
                <span asp-validation-for="Idv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idt" class="control-label"></label>
                <select asp-for="Idt" class="form-control" asp-items="ViewBag.Idt"></select>
                <span asp-validation-for="Idt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idtp" class="control-label"></label>
                <select asp-for="Idtp" class="form-control" asp-items="ViewBag.Idtp"></select>
                <span asp-validation-for="Idtp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volte a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        setTimeout(function () {
            $('.alert').fadeOut('fast');
        }, 5000); 
    </script>
}
