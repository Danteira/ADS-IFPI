<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lincoln_MatheusAPS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lincoln_MatheusAPS.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Lincoln_MatheusAPS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="Home" asp-action="Index" style="color: white; font-size: 8px;">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="Clientes" asp-action="Index" style="color: white; font-size: 8px;">Cliente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="Vendedors" asp-action="Index" style="color: white; font-size: 8px;">Vendedor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="Transportadoras" asp-action="Index" style="color: white; font-size: 8px;">Transportadora</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="PagamentoComCheques" asp-action="Index" style="color: white; font-size: 8px;">Cheque</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="PagamentoComCartaos" asp-action="Index" style="color: white; font-size: 8px;">Cartão</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="NotaDeVendas" asp-action="Index" style="color: white; font-size: 8px;">Nota</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="Pagamentos" asp-action="Index" style="color: white; font-size: 8px;">Pagamento</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="Marcas" asp-action="Index" style="color: white; font-size: 8px;">Marca</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="Produtos" asp-action="Index" style="color: white; font-size: 8px;">Produto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="Items" asp-action="Index" style="color: white; font-size: 8px;">Item</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-circle" asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white; font-size: 8px;">Privacidade</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Lincoln_MatheusAPS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
